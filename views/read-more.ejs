        document.getElementById('likeBtn').addEventListener('click', function(event) {
    event.preventDefault();
    const postId = this.getAttribute('data-id');

    fetch(`/like-post/${postId}`, { method: 'POST' })
        .then(response => response.json())
        .then(data => {
            document.getElementById('likeCount').textContent = data.likes;
        })
        .catch(error => console.error('Error liking the post:', error));
});

document.getElementById('comment-form').addEventListener('submit', function(e) {
    e.preventDefault();
    const postId = this.getAttribute('data-id'); // This should be dynamically assigned
    const author = document.getElementById('author').value;
    const commentText = document.getElementById('commentText').value;
   

    fetch(`/comments/${postId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ author, commentText })
    })
    .then(response => response.text())
    .then(data => {
        //alert('Comment added!');
        loadComments();
        const author = document.getElementById('author').value = ""
    const commentText = document.getElementById('commentText').value = ""
    })
    .catch(error => console.error('Error:', error));
});

function loadComments() {
    const postElement = document.getElementById('blog-post');
    const postId = postElement.getAttribute('data-post-id'); // This should be dynamically assigned
    fetch(`/comments/${postId}`)
        .then(response => response.json())
        .then(comments => {
            const commentList = document.getElementById('comment-list'); // Ensure this is the ID of your <ul> or <div> that will contain the comments
            commentList.innerHTML = ''; // Clear existing comments

            comments.forEach(comment => {
                const li = document.createElement('li');
                li.className = 'reviews-single-item';

                const mediaDiv = document.createElement('div');
                mediaDiv.className = 'media media-none--xs';

                const img = document.createElement('img');
                img.src = '/img/blog/comment1.jpg'; // Default or dynamic image if you have one in comment
                img.alt = 'Comment';
                img.className = 'media-img-auto';

                const mediaBody = document.createElement('div');
                mediaBody.className = 'media-body';

                const h4 = document.createElement('h4');
                h4.className = 'comment-title';
                h4.textContent = comment.author; // Assuming comment.author exists

                const span = document.createElement('span');
                span.className = 'post-date';
                span.textContent = new Date(comment.date).toLocaleDateString(); // Format date as you prefer

                const p = document.createElement('p');
                p.textContent = comment.commentText; // Assuming comment.commentText exists

                // Optionally add a reply link or button here
                // const replyLink = document.createElement('a');
                // replyLink.href = '#';
                // replyLink.className = 'item-btn';
                // replyLink.innerHTML = 'REPLY<i class="fas fa-long-arrow-alt-right"></i>';
                // mediaBody.appendChild(replyLink);

                mediaBody.appendChild(h4);
                mediaBody.appendChild(span);
                mediaBody.appendChild(p);

                mediaDiv.appendChild(img);
                mediaDiv.appendChild(mediaBody);

                li.appendChild(mediaDiv);
                commentList.appendChild(li);
            });
        })
        .catch(error => console.error('Error:', error));
}


